<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    
    <persistence-unit name="essat" transaction-type="RESOURCE_LOCAL"> 
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>tn.essat.model.Compte</class>
        <class>tn.essat.model.Ensaignant</class>
        <class>tn.essat.model.Etudiant</class>
        <class>tn.essat.model.Personne</class>
        <class>tn.essat.model.Role</class>
        <properties>
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/essatpfa" />
            <property name="eclipselink.logging.level" value="INFO" />
        </properties>
    </persistence-unit>
    
</persistence>